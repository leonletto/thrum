{
  "mcpServers": {
    "thrum": {
      "type": "stdio",
      "command": "{{.MCPCommand}}",
      "args": ["mcp", "serve"]
    }
  },
  "hooks": {
    "SessionStart": [{
      "hooks": [{
        "type": "command",
        "command": "export THRUM_NAME={{.AgentName}} && bash scripts/thrum-startup.sh"
      }]
    }]
  }
}
