{
  "name": "@thrum/shared-logic",
  "version": "0.2.0",
  "type": "module",
  "description": "Shared business logic, API clients, and state management for Thrum UI",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc --noEmit",
    "dev": "tsc --noEmit --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@tanstack/query-core": "^5.62.15",
    "@tanstack/react-query": "^5.62.15",
    "@tanstack/react-store": "^0.7.4",
    "@tanstack/store": "^0.7.2",
    "zod": "^3.24.1"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.2",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.17.11",
    "@types/react": "^18.3.3",
    "@vitest/coverage-v8": "^2.1.8",
    "jsdom": "^28.0.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.0",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
